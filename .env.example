# Ayrshare API Configuration
# Get your API key from: https://app.ayrshare.com/api-key
AYRSHARE_API_KEY=your_ayrshare_api_key_here

# Optional: Profile Key for multi-tenant scenarios
# If you manage multiple social media profiles, specify the profile key
# AYRSHARE_PROFILE_KEY=your_profile_key_here

# Ayrshare API Configuration
AYRSHARE_BASE_URL=https://app.ayrshare.com/api
AYRSHARE_TIMEOUT=30
AYRSHARE_DEBUG=false

# Server Configuration
# Transport mode: stdio (for Claude Desktop/Code) or http (for remote access)
TRANSPORT=stdio

# HTTP Transport Settings (only used when TRANSPORT=http)
HOST=0.0.0.0
PORT=8000

# Logging Configuration
# LOG_LEVEL: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# LOG_FORMAT: json (production) or text (development)
LOG_FORMAT=json

# Rate Limiting
# Set to 0 to disable rate limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
